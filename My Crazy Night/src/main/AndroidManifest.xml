<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicdynasty.mycrazynight" >

    <uses-sdk android:minSdkVersion="13"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.epicdynasty.mycrazynight.MainActivity"
            android:label="@string/app_name" >
           //  android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
        <activity android:name="com.facebook.LoginActivity">
            </activity>
        <activity
            android:name="com.epicdynasty.mycrazynight.SecondActivity"
            android:label="@string/title_activity_second"
            android:parentActivityName="com.epicdynasty.mycrazynight.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicdynasty.mycrazynight.MainActivity" />
        </activity>
    </application>

</manifest>


